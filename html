<!doctype html> 
<html lang="en"> 
<head> 
    <meta charset="UTF-8" />
    <title>Moedas na praia</title>
    <script src="//cdn.jsdelivr.net/npm/phaser@3.11.0/dist/phaser.js"></script>
    <style type="text/css">
        body {
            margin: 0;
        }
    </style>
</head>
<body>

<script type="text/javascript">

    var config = {
        type: Phaser.AUTO,
        width: 800,
        height: 625,
        physics: {
        default: 'arcade',
        arcade: {
            gravity: { x: 200 },
            debug: false
        }
    },
        scene: {
            preload: preload,
            create: create,
            update: update
        }
    };

    var game = new Phaser.Game(config);

    function preload ()
    {
        this.load.image('finalDay', 'Assets/finalDay.PNG');
        this.load.image('moedas', 'Assets/coin.png', { frameWidth: 32, frameHeight: 48 });
        this.load.image('star', 'assets/star.png');
        this.load.image('bomb', 'assets/bomb.png');
        this.load.spritesheet('dude', 
            'assets/dude.png',
            { frameWidth: 32, frameHeight: 48 }
    );
        
    }

    function create ()
    {
        this.add.imgae(800,625, 'finalDay');
        platforms = this.physics.add.staticGroup();
        platforms.create(600, 400, 'duna');
    }

    function update ()
    {
    }

</script>

</body>
</html>
